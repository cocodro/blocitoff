<% if @list.nil? %>
  <%= link_to "Create Your To-Do List!", new_list_path, class: 'btn btn-success' %>
<% else %>
  <h1><%= @list.title %></h1>
    <div class="media-body">
      <h4 class="media-heading">
          <%= render partial: "tasks/task", collection: @tasks %>
      </h4>
    </div>

  </br>

</br>

  <div>
    <%= render partial: "tasks/form", locals: {list: @list} %>
  </div>
  <p><%= link_to "Edit List", edit_list_path(@list) %></p>
  <p><%= link_to "Delete List", @list, method: :delete %></p>
<% end %>
